@using TripPlanner.Client.Models
<RadzenLabel Text="Todas as Viagens" />
<RadzenDataGrid Data="@TripsList">
    <Columns>
        <RadzenDataGridColumn Property="@nameof(Trip.Origin)" Title="Origem" />
        <RadzenDataGridColumn Property="@nameof(Trip.Destination)" Title="Destino" />
        @if (typeTransport == "Todos") {
            <RadzenDataGridColumn Property="@nameof(Trip.TypeTransport)" Title="Transporte" />
        }
        <RadzenDataGridColumn Property="@nameof(Trip.Time)" Title="Tempo" />
        <RadzenDataGridColumn Property="@nameof(Trip.Price)" Title="Preco" />
        <RadzenDataGridColumn Property="@nameof(Trip.Emissions)" Title="Emissoes" />
    </Columns>
</RadzenDataGrid>